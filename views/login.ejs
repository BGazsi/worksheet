<%- contentFor('body') %>
<div class="login-box">
    <div class="login-box__body">
        <h3 class="login-box__title">Bejelentkezés</h3>
        <form action="/user/login" method="post">
            <div class="form-group">
                <input type="email" id="username" name="username" class="form-control" placeholder="E-mail cím">
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" class="form-control" placeholder="Jelszó">
            </div>

            <p class="text-danger"> <%= error || '' %></p>

            <button type="submit" class="login-box__button">Bejelentkezés</button>
        </form>
    </div>
    <div class="login-box__footer">
        <a href="/user/forgot" class="login-box__link">Elfelejtetted a jelszavadat?</a>
        <a href="/user/register" class="login-box__link">Még nem regisztráltál?</a>
    </div>
</div>