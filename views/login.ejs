<%- contentFor('body') %>
ikon : <i class="fas fa-flag"></i>
<div class="login-box box">
    <div class="box__body">
        <h3 class="box__title">Bejelentkezés</h3>
        <form action="/user/login" method="post">
            <div class="form-group">
                <input type="email" id="username" name="username" class="form-control" placeholder="E-mail cím" required>
            </div>
            <div class="form-group">
                <input type="password" id="password" name="password" class="form-control" placeholder="Jelszó" required>
            </div>

            <p class="text-danger"> <%= error || '' %></p>

            <button type="submit" class="box__button">Bejelentkezés</button>
        </form>
    </div>
    <div class="box__footer">
        <a href="/user/forgot" class="box__link">Elfelejtetted a jelszavadat?</a>
        <a href="/user/register" class="box__link">Még nem regisztráltál?</a>
    </div>
</div>