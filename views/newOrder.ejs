<form action="/order/create" method="post">
    <input type="text" id="orderNumber" name="orderNumber" placeholder="orderNumber">
    <input type="date" id="deadline" name="deadline" placeholder="deadline">
    <input type="text" id="textOnItem" name="textOnItem" placeholder="textOnItem">
    <label for="sampleNeeded">samleNeeded</label>
    <input type="checkbox" id="sampleNeeded" name="sampleNeeded">
    <label for="scrapReplacementNeeded">scrapReplacementNeeded</label>
    <input type="checkbox" id="scrapReplacementNeeded" name="scrapReplacementNeeded">
    <textarea name="otherNote" id="otherNote" cols="30" rows="10"></textarea>
    <textarea name="privateNote" id="privateNote" cols="30" rows="10"></textarea>

    <input type="text" id="orderItemProduct" name="orderItems[0][product]">
    <input type="text" id="orderItemQuantity" name="orderItems[0][quantity]">
    <input type="text" id="orderItemNumberOfColors" name="orderItems[0][numberOfColors]">
    <input type="text" id="orderItempantoneColors" name="orderItems[0][pantoneColors]">
    <input type="text" id="orderItemPlacement" name="orderItems[0][placement]">
    <input type="file" id="orderItemPictures" name="orderItems[0][pictures]">
    <input type="submit">
</form>
<%= error ? error : '' %>
