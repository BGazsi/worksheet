<%- contentFor('body') %>
<div class="row justify-content-center mt-5">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <p class="text-center">Regisztráció</p>
                <form action="/user/register" method="post">
                    <div class="form-group">
                        <input type="text" id="company" name="company" class="form-control" placeholder="Megrendelő neve">
                    </div>
                    <div class="form-group">
                        <input type="text" id="name" name="name" class="form-control" placeholder="Kapcsolattartó neve">
                    </div>
                    <div class="form-group">
                        <input type="text" id="phone" name="phone" class="form-control" placeholder="Telefonszám">
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" class="form-control" placeholder="E-mail cím">
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" name="password" class="form-control" placeholder="Jelszó">
                    </div>

                    <p class="text-danger"> <%= error || '' %></p>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Regisztráció</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>